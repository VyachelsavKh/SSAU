<Window x:Class="CodeConvertor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CodeConvertor"
        mc:Ignorable="d"
        Title="Числовой конвертер" Height="600" Width="1330" WindowStartupLocation="CenterScreen" FontFamily="Arial" FontSize="16" Background="#FFE2E2E2" MinWidth="1375" MinHeight="200" WindowState="Maximized" PreviewKeyDown="Window_PreviewKeyDown">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition x:Name="InputRow" Width="630*"/>
            <ColumnDefinition x:Name="OutputRow" Width="745*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition x:Name="MiddleRow" Height="1*"/>
        </Grid.RowDefinitions>
        <Button x:Name="OpenInput" Content="Открыть" HorizontalAlignment="Left" VerticalAlignment="Center" Height="30" Width="75" Margin="10,0,0,0" Click="OpenInput_Click"/>
        <Button x:Name="SaveAsInput" Content="Сохранить как" HorizontalAlignment="Left" VerticalAlignment="Center" Height="30" Width="125" Grid.Column="0" Margin="95,0,0,0" Click="SaveAsInput_Click"/>
        <Button x:Name="SaveInput" Content="Сохранить" HorizontalAlignment="Left" VerticalAlignment="Center" Height="30" Width="100" Grid.Column="0" Margin="230,0,0,0" Click="SaveInput_Click"/>
        <Button x:Name="ClearInput" Content="Очистить" HorizontalAlignment="Left" VerticalAlignment="Center" Height="30" Width="100" Grid.Column="0" Margin="520,0,0,0" Click="ClearInput_Click"/>

        <Button x:Name="SaveAsOutput" Content="Сохранить как" HorizontalAlignment="Left" VerticalAlignment="Center" Height="30" Width="125" Grid.Column="1" Margin="10,0,0,0" Click="SaveAsOutput_Click"/>
        <Button x:Name="SaveOutput" Content="Сохранить" HorizontalAlignment="Left" VerticalAlignment="Center" Height="30" Width="100" Grid.Column="1" Margin="145,0,0,0" Click="SaveOutput_Click"/>
        <ComboBox x:Name="InputCoder" HorizontalAlignment="Left" Margin="340,0,0,0" VerticalAlignment="Center" Width="170" Height="30" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" SelectionChanged="CoderSelectionChanged"/>
        <ComboBox x:Name="OutputCoder" HorizontalAlignment="Left" Margin="255,0,0,0" VerticalAlignment="Center" Width="170" Height="30" Grid.Column="1" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" SelectionChanged="CoderSelectionChanged"/>
        <TextBox x:Name="InputTextBox" Margin="10,25,10,10" Grid.Row="1" TextWrapping="Wrap" Text="" AcceptsReturn="True" AcceptsTab="True" VerticalScrollBarVisibility="Auto" TextChanged="InputTextBox_TextChanged" Grid.RowSpan="2"/>
        <TextBox x:Name="OutputTextBox" Grid.Row="1" TextWrapping="Wrap" AcceptsReturn="True" AcceptsTab="True" Grid.Column="1" IsReadOnly="True" Margin="10,25,10,10" VerticalScrollBarVisibility="Auto"/>
        <Button x:Name="ChangeCodes" Content="Поменять коды" HorizontalAlignment="Left" VerticalAlignment="Center" Height="30" Width="125" Margin="435,0,0,0" Grid.Column="1" Click="ChangeCodes_Click"/>
        <TextBlock x:Name="InputFileName" HorizontalAlignment="Left" Margin="132,0,0,0" Grid.Row="1" TextWrapping="Wrap" Text="input.txt" VerticalAlignment="Top" Height="20" Width="65"/>
        <TextBlock x:Name="OutputFileName" HorizontalAlignment="Left" Margin="140,0,0,0" TextWrapping="Wrap" Text="output.txt" VerticalAlignment="Top" Height="20" Grid.Column="1" Width="74" Grid.Row="1"/>
        <TextBlock HorizontalAlignment="Left" Margin="10,0,0,0" Grid.Row="1" TextWrapping="Wrap" Text="Входной файл:" VerticalAlignment="Top" Height="20" Width="117"/>
        <TextBlock Grid.Column="1" HorizontalAlignment="Left" Margin="10,0,0,0" Grid.Row="1" TextWrapping="Wrap" Text="Выходной файл:" VerticalAlignment="Top" Height="20" Width="125"/>
        <TextBlock x:Name="DelimeterTextBlock" HorizontalAlignment="Left" Margin="570,0,0,0" TextWrapping="Wrap" Text="Разделитель:" VerticalAlignment="Center" Height="20" Width="100" TextAlignment="Center" Grid.Column="1"/>
        <TextBox x:Name="DelimiterString" HorizontalAlignment="Left" Margin="675,0,0,0" TextWrapping="Wrap" VerticalAlignment="Center" Width="60" Height="20" MaxLength="5" MaxLines="1" TextChanged="DelimiterString_TextChanged" Grid.Column="1"/>
    </Grid>
</Window>
